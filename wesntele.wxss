.content-header {
  position: relative;
  padding: 30rpx 30rpx 0rpx 30rpx;
}

.content-header>h1 {
  margin: 0;
  font-size: 48rpx;
}

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: 'Source Sans Pro', sans-serif;
}

.content-header>h1>small {
  font-size: 15px;
  display: inline-block;
  padding-left: 4px;
  font-weight: 300;
}
