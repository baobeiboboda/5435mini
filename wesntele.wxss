.content-header {
  position: relative;
  padding: 30rpx 30rpx 0rpx 30rpx;
}

.content-header>h1 {
  margin: 0;
  font-size: 48rpx;
}

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: 'Source Sans Pro', sans-serif;
}

.content-header>h1>small {
  font-size: 15px;
  display: inline-block;
  padding-left: 4px;
  font-weight: 300;
}

.box {
  position: relative;
  border-radius: 6rpx;
  background: #fff;
  /* border-top: 6rpx solid #d2d6de; */
  border-top: 6rpx;
  margin-bottom: 40rpx;
  width: 100%;
  /* box-shadow: 0 2rpx 2rpx rgba(0,0,0,0.1); */
}

.box-header::before, .box-body::before, .box-footer::before, .box-header::after,
.box-body::after, .box-footer::after {
  content: " ";
  display: table;
  box-sizing: border-box;
}

.box-header.with-border {
  border-bottom: 2rpx solid #f4f4f4;
}

.box-header {
  color: #444;
  display: block;
  padding: 20rpx;
  position: relative;
}

.box-header .box-title {
  display: inline-block;
  font-size: 36rpx;
  margin: 0;
  line-height: 1;
}

.box-header>.box-tools {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
}

.pull-right {
  float: right !important;
}

.box-header::after, .box-body::after, .box-footer::after {
  clear: both;
}

.box-body {
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-bottom-right-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
  padding: 20rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.col-sm-4 {
  position: relative;
  min-height: 2rpx;
  padding-right: 30rpx;
  padding-left: 30rpx;
}

.control-label {
  display: inline-block;
  max-width: 100%;
  margin-bottom: 10rpx;
  font-weight: 700;
}

.box-footer {
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-bottom-right-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
  border-top: 2rpx solid #f4f4f4;
  padding: 20rpx;
  background-color: #fff;
}

.btn {
  display: inline-block;
  margin-bottom: 0;
  font-weight: 400;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  -ms-touch-action: manipulation;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  border: 2rpx solid transparent;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  line-height: 1.42857143;
  border-radius: 8rpx;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  -webkit-box-shadow: none;
  box-shadow: none;
}

.btn-primary {
  background-color: #3c8dbc;
  border-color: #367fa9;
  color: #fff;
}

.btn-success {
  background-color: #00a65a;
  border-color: #008d4c;
  color: #fff;
}

.btn-danger {
  background-color: #dd4b39;
  border-color: #d73925;
  color: #fff;
}

.box-header::before, .box-body::before, .box-footer::before, .box-header::after,
.box-body::after, .box-footer::after {
  content: " ";
  display: table;
}

.has-success {
  color: #00a65a;
}

.has-warning {
  color: #f39c12;
}

.has-error {
  color: #dd4b39;
}

.time {
  color: #999;
  float: right;
  padding: 20rpx;
  font-size: 24rpx;
}

.col-sm-2 {
  width: 16.66666667%;
}

.col-sm-1, .col-sm-10, .col-sm-11, .col-sm-12, .col-sm-2, .col-sm-3, .col-sm-4,
.col-sm-5, .col-sm-6, .col-sm-7, .col-sm-8, .col-sm-9 {
  float: left;
}

.col-sm-10 {
  width: 83.33333333%;
}

.col-md-12 {
  position: relative;
  min-height: 2rpx;
  padding-right: 30rpx;
  padding-left: 30rpx;
}

